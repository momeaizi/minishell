#include "minishell.h"


int main(int ac, char **av, char **env)
{
	int 		i;
	int			id;
	int			**pipes;
	t_command	*head;
	t_command	*tmp;

	head = NULL;
	char *str;
	while (1)
	{
		str = readline(">$");
		if (check_quotes(str))
		{
			head = tokenizer(str);
			parser(head, pipes,env);
		}
		id = fork();
		if (!id)
		{
			dup2(head->input, 0);
			dup2(head->output, 1);
			if (head->output != 1)
				close(head->output);
			if (head->should_execute)
				if (execve(head->command_path, head->command_args, env) == -1)
					return (1);
		}
		free(str);
		tmp = head;
		close_all(head);
		clear_tokens(&tmp);
		ft_lstclear(&head);
		free(pipes);
		head  = NULL;
		// system("leaks minishell");
	}
	return (0);
}
